<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="40dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/layout_call_voice"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/call_shape_gray_70_000000_corner12"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        >
        <io.agora.chat.callkit.widget.EaseCallImageView
            android:id="@+id/iv_avatar"
            app:ease_shape_type="round"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/group_avatar" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_call_video"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="00:00"/>
</FrameLayout>